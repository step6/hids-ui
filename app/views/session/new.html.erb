<!DOCTYPE html>
<html>
<head>
  <title>OSSEC Advanced Management</title>
  <%= stylesheet_link_tag 'login/ossec_login' %>
  <%= csrf_meta_tag %>
</head>
<body>

<%= image_tag "ossec.jpg" %>
<div id="login-form">
	<div id="inter"></div>
	<%=	form_tag(login_path) do %>
		<div id="error"><%= flash[:error] %></div>
		<%= label_tag 'login', 'Login' %>
		<%= text_field_tag 'login' %>
		<%= label_tag 'password', 'Password' %>
		<%= password_field_tag 'password' %>
		<%= submit_tag 'Log me in' %>
	<% end %>
</div>

</body>
</html>