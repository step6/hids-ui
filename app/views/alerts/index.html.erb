<h1>Listing Alerts</h1>

<div class="pagination"><%= page_entries_info @alerts %></div>
<%= paginate @alerts %>

<ul id="alerts">
	<li class="alerts_head">
		<div class="alert_level_head">Lvl</div>
		<div class="alert_time">Time</div>
		<div class="alert_description">Description</div>
	</li>

	<% @alerts.each do |alert| %>
		<li class="alert">
			<div class="alert_level">
				<div class="alert_level_<%= alert.rule.level %>">
					<div><%= alert.rule.level %></div>
				</div>
			</div>
			<div class="alert_time"><%= time alert.timestamp %></div>
			<div class="alert_description"><%= alert.rule.description %></div>
		</li>
	<% end %>
</ul>

<%= paginate @alerts %>
<div class="pagination"><%= page_entries_info @alerts %></div>